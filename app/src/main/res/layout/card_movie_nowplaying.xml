<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="186dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    android:layout_height="290dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:contentDescription="@string/movie_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            android:foreground="@drawable/gradient_fade_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/poppins_semibold"
            tools:text="@tools:sample/lorem/random"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/md_theme_light_surface"
            app:layout_constraintBottom_toTopOf="@id/ll_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_24"/>
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_weight="1"
                tools:text="8.4/10"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/md_theme_light_surface"
                android:includeFontPadding="false"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_price"
                android:layout_width="80dp"
                app:textEndPadding="0dp"
                android:layout_height="24dp"
                android:clickable="false"
                app:chipMinTouchTargetSize="0dp"
                android:includeFontPadding="false"
                app:chipIconTint="?attr/colorPrimary"
                app:chipBackgroundColor="?attr/colorPrimaryContainer"
                app:chipStrokeWidth="0dp"
                app:chipIcon="@drawable/ic_payments_24"
                tools:text="1,345"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    

</androidx.cardview.widget.CardView>