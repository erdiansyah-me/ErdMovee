<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.PaymentStatusFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_payment_method"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Status"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTitles" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tb_payment_method" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt_anim_status"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_payment_method"
        app:lottie_autoPlay="true"
        tools:lottie_rawRes="@raw/anim_process_success" />

    <TextView
        android:id="@+id/tv_payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Payment Success"
        android:textAppearance="@style/TextDetailHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lt_anim_status" />

    <TextView
        android:id="@+id/tv_payment_status_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Transaction Detail"
        android:textAppearance="@style/TextDetailHead"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_status" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Transaction Date"
        android:textAppearance="@style/TextDetailCommon"
        android:textColor="?attr/colorOutline"
        app:layout_constraintStart_toStartOf="@+id/tv_payment_status_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_status_desc" />

    <TextView
        android:id="@+id/tv_payment_status_desc_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="24-11-2024 11:23"
        android:textAppearance="@style/TextDetailHead"
        app:layout_constraintStart_toStartOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Transaction ID"
        android:textAppearance="@style/TextDetailCommon"
        android:textColor="?attr/colorOutline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_status_desc_date_value" />

    <TextView
        android:id="@+id/tv_payment_status_desc_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="23412401940 343434"
        android:textAppearance="@style/TextDetailHead"
        app:layout_constraintStart_toStartOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_id" />

    <TextView
        android:id="@+id/tv_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Payment Method"
        android:textAppearance="@style/TextDetailCommon"
        android:textColor="?attr/colorOutline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_status_desc_id_value" />

    <TextView
        android:id="@+id/tv_payment_status_desc_payment_method_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="ErdMovee Coins"
        android:textAppearance="@style/TextDetailHead"
        app:layout_constraintStart_toStartOf="@+id/tv_payment_method"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_method" />

    <TextView
        android:id="@+id/tv_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Nominal"
        android:textAppearance="@style/TextDetailCommon"
        android:textColor="?attr/colorOutline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_status_desc_payment_method_value" />

    <TextView
        android:id="@+id/tv_payment_status_desc_nominal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="500"
        android:textAppearance="@style/TextDetailHead"
        app:layout_constraintStart_toStartOf="@+id/tv_nominal"
        app:layout_constraintTop_toBottomOf="@+id/tv_nominal" />

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btn_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:text="@string/done"
            android:textAppearance="@style/ButtonTextStyle"
            app:layout_constraintTop_toBottomOf="@+id/tv_orregister" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>